- edit ||= false
.section
  %table(width=500 cellpadding=0 cellspacing=0)
    %tr
      %td(valign="top")
        .label.top.req 用户名:
        = f.text_field :login, :style => "width:240px"
      %td= spacer
      %td(valign="top")
        .label.top.req Email:
        = f.text_field :email, :style => "width:240px"
    %tr
      %td(valign="top")
        .label 密码:
        = f.password_field :password, :style => "width:240px"
      %td= spacer
      %td(valign="top")
        .label 密码确认:
        = f.password_field :password_confirmation, :style => "width:240px"
    %tr
      %td(valign="top" colspan=3)
        .check_box(style="margin-top:6px")
          -# Sorry, you can't revoke Admin rights from yourself.
          = f.check_box(:admin, { :disabled => edit && @user == @current_user }) << " 管理员"
.subtitle 个人信息
.section
  %table(width=500 cellpadding=0 cellspacing=0)
    %tr
      %td(valign="top")
        .label 真实姓名:
        = f.text_field :name, :style => "width:240px"
      %td= spacer
      %td(valign="top")
        .label 职位:
        = f.text_field :title, :style => "width:240px"

