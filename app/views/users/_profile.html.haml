.remote
  - remote_form_for(@user) do |f|
    = link_to_close edit_user_path(@user)
    = f.error_messages
    .section
      %table{ :width => 500, :cellpadding => 0, :cellspacing => 0 }
        %tr
          %td{ :valign => :top }
            .label.top 真实姓名:
            = f.text_field :name, :style => "width:240px"
          %td= spacer
          %td{ :valign => :top }
            .label 职位:
            = f.text_field :title, :style => "width:240px"
    .subtitle Contact Information
    .section
      %table{ :width => 500, :cellpadding => 0, :cellspacing => 0 }
        %tr
          %td{ :valign => :top, :colspan => 3 }
            .label.top.req Email:
            = f.text_field :email, :style => "width:240px"
          %td= spacer
          %td{ :valign => :top, :colspan => 3 }
            .label.top 备用email:
            = f.text_field :alt_email, :style => "width:240px"
        %tr
          %td{ :valign => :top, :colspan => 3 }
            .label 固定电话:
            = f.text_field :phone, :style => "width:240px"
          %td= spacer
          %td{ :valign => :top, :colspan => 3 }
            .label 手机:
            = f.text_field :mobile, :style => "width:240px"

    .buttonbar
      = f.submit "保存设置"
      or
      = link_to_cancel edit_user_path(@user)
%br