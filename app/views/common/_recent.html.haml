- title = (recent.subject.respond_to?(:full_name) ? recent.subject.full_name : (recent.subject.respond_to?(:name) ? recent.subject.name : recent.subject.number))
%li{ :class => recent != @recent.last ? "" : "last" }
  %dt= link_to(truncate(title, :length => 19), polymorphic_url(recent.subject), :title => title)
  %tt= model_chinese_name(recent.subject_type) + ":"
